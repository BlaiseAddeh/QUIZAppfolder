@model OnlineExamSystem.Models.ManageFolder.SessionModel



<div class="jumbotron">
    <h2><span style="color:#ff6a00;"><i>Online</i> </span>Exam System</h2>
</div>

@using (Html.BeginForm("Instruction", "Home", FormMethod.Post))
{
   <div class="container">
       <div class="row form-horizontal">

           <div class="form-group">
               <div class="col-md-3">@Html.Label("Select Test")</div>
               <div class="col-md-5">
                   @Html.DropDownListFor(x =>x.TestId, new SelectList(ViewBag.Tests,"TestId","Name", Model.TestId),"-- Select Test --", new { @class="form-control"})
               </div>
           </div>

           <div class="form-group">
               <div class="col-md-3">@Html.Label("Enter Name")</div>
               <div class="col-md-5">@Html.TextBoxFor(x =>x.UserName,Model.UserName, new { @class="form-control"})</div>
           </div>

           <div class="form-group">
               <div class="col-md-3">@Html.Label("Enter Email")</div>
               <div class="col-md-5">@Html.TextBoxFor(x =>x.Email,Model.Email, new { @class="form-control"})</div>
           </div>

           <div class="form-group">
               <div class="col-md-3">@Html.Label("Enter Phone")</div>
               <div class="col-md-5">@Html.TextBoxFor(x =>x.Phone,Model.Phone, new { @class="form-control"})</div>
           </div>

           <div class="form-group">
               <div class="col-md-3"></div>
               <div class="col-md-5"><input type="button" value="Submit"  class="btn btn-primary btn-block"/></div>
           </div>

       </div>
   </div>
}
